# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Aliases
alias ls="eza --icons --hyperlink"
alias pacdiff="sudo env DIFFPROG='nvim -d' pacdiff"

# Bins
PATH=$PATH:$HOME/bin
PATH=$PATH:$HOME/.local/bin
PATH=$PATH:$HOME/.cargo/bin

# Starship
eval "$(starship init bash)"
