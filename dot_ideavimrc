nnoremap <leader>e :action ActivateProjectToolWindow<CR>
nnoremap <leader>ff :action SearchEverywhere<CR>
nnoremap <leader>fw :action FindInPath<CR>
nnoremap <leader>gt :action ActivateCommitToolWindow<CR>
nnoremap <leader>h :action ActivateTerminalToolWindow<CR>
nnoremap <leader>ra :action RenameElement<CR>
nnoremap <leader>x :action CloseEditor<CR>

nnoremap <Tab> :action NextTab<CR>
nnoremap <S-Tab> :action PreviousTab<CR>



